<form class="sign-in" id="sign-in-form-group">
  <div class="form-group">
    <label for="sign-in-email">Email address</label>
    <input type="email" name="credentials[email]" class="form-control" id="sign-in-email" placeholder="email@example.com">
  </div>
  <div class="form-group">
    <label for="sign-in-password">Password</label>
    <input type="password" name="credentials[password]" class="form-control" id="sign-in-password" placeholder="Password">
  </div>
  <button type="submit" class="btn btn-primary ">Sign in</button>
  <div class="dropdown-divider"></div>
  <a class="dropdown-item" href="#" id="new-user">New around here? Sign up</a>
</form>
